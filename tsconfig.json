{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true, // Strict TS rules
    "esModuleInterop": true, // Allow easy imports (without *)
    "pretty": true, // Stylize errors and messages using color and context.
    "sourceMap": true, // For easy debugging (shows true source code)
    "target": "es6", 
    "outDir": "dist",
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
